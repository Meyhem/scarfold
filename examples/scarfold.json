{
  "templateFolder": "templates",
  "scaffolding": {
    "simple": {
      "render": [
        {
          "template": "simple.hbs",
          "dest": "src/simples/simple-{{name}}-1.txt"
        },
        {
          "template": "simple.hbs",
          "dest": "src/simples/simple-{{name}}-2.txt"
        }
      ],
      "vars": {
        "sentence1": { },
        "sentence2": { },
        "name": { "default": "file" }
      }
    },

    "casing": {
      "render": [
        {
          "template": "express.router.hbs",
          "dest": "src/express/routers/{{router}}.js"
        }
      ],
      "vars": {
        "router": {}
      }
    },
    
    "component": {
      "render": [
        {
          "template": "react.component.hbs",
          "dest": "src/components/{{name}}.ts"
        }
      ],
      "vars": {
        "name": { },
        "withRedux": { 
          "default": false
        }
      }
    }
  }
}