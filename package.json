{
  "name": "scarfold",
  "version": "0.0.5",
  "description": "Nodejs utility for scaffolding custom templates",
  "main": "lib/scarfold.js",
  "preferGlobal": true,
  "scripts": {
    "build": "tsc",
    "dev": "tsc && tsc --watch",
    "test": "yarn mocha -r ts-node/register test/**/*.test.ts",
    "prepublish": "tslint --project . && tsc && yarn test"
  },
  "bin": {
    "scarfold": "./bin/scarfold.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Meyhem/scarfold.git"
  },
  "keywords": [
    "cli",
    "scaffolding",
    "templates"
  ],
  "author": "Meyhem",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Meyhem/scarfold/issues"
  },
  "homepage": "https://github.com/Meyhem/scarfold#readme",
  "dependencies": {
    "chalk": "^2.4.1",
    "fs-extra": "^6.0.1",
    "handlebars": "^4.0.11",
    "jsonschema": "^1.2.4",
    "yargs": "^12.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/fs-extra": "^5.0.4",
    "@types/handlebars": "^4.0.38",
    "@types/mocha": "^5.2.4",
    "@types/node": "^10.5.2",
    "@types/sinon": "^5.0.1",
    "@types/yargs": "^11.1.0",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "sinon": "^6.1.3",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2"
  }
}
